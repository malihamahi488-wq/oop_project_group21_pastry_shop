<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.com_oop_project_group21_pastryshop.BranchManager.ManageEmployeeAccountsController"
            prefWidth="900.0" prefHeight="600.0">

    <VBox spacing="12" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
          style="-fx-padding:12;">
        <Label text="Manage Employees" style="-fx-font-size:20px; -fx-font-weight:bold;" />

        <!-- Controls -->
        <HBox spacing="8" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Search by name or ID" />
            <Button text="Search" onAction="#onSearch" />
            <Button text="Show All" onAction="#onShowAll" />
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Add Employee" fx:id="btnAdd" onAction="#onAddEmployee"/>
            <Button text="Edit Selected" fx:id="btnEdit" onAction="#onEditSelected"/>
            <Button text="Refresh" onAction="#onRefresh"/>
        </HBox>

        <SplitPane dividerPositions="0.6" prefHeight="460">
            <!-- Left: Table -->
            <AnchorPane>
                <TableView fx:id="employeeTable" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
                    <columns>
                        <TableColumn fx:id="colEmpId" text="Employee ID" prefWidth="110"/>
                        <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
                        <TableColumn fx:id="colRole" text="Role" prefWidth="140"/>
                        <TableColumn fx:id="colContact" text="Contact" prefWidth="140"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="80"/>
                    </columns>
                </TableView>
            </AnchorPane>

            <!-- Right: Add/Edit form -->
            <AnchorPane>
                <VBox spacing="8" style="-fx-padding:10;">
                    <Label text="Employee Details" style="-fx-font-size:16px; -fx-font-weight:bold;" />
                    <GridPane hgap="8" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" minWidth="110"/>
                            <ColumnConstraints halignment="LEFT" minWidth="260"/>
                        </columnConstraints>

                        <Label text="Employee ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="lblEmpId" text="(auto)" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="tfName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Role:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cbRole" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Contact No:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="tfContact" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="tfEmail" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Status:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cbStatus" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    </GridPane>

                    <HBox spacing="8" alignment="CENTER_RIGHT">
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Save" fx:id="btnSave" onAction="#onSave" />
                        <Button text="Cancel" fx:id="btnCancel" onAction="#onCancel" />
                    </HBox>

                    <Label fx:id="lblFeedback" wrapText="true" textFill="red" />
                </VBox>
            </AnchorPane>
        </SplitPane>
    </VBox>
</AnchorPane>
