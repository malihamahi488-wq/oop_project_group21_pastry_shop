<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.com_oop_project_group21_pastryshop.QualityControlOfficer.SendReportToBranchManagerController"
            prefHeight="500.0" prefWidth="900.0">

    <children>
        <VBox spacing="10.0" padding="10.0"
              AnchorPane.topAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0">

            <!-- Header -->
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Send Report to Branch Manager"
                       style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                <Label text="Officer ID:"/>
                <Label fx:id="lblOfficerId" text="-" />
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Reload Reports" onAction="#onReloadReports"/>
            </HBox>

            <!-- Main area: available reports + send panel -->
            <SplitPane dividerPositions="0.5">
                <!-- Left: reports list -->
                <VBox spacing="5.0">
                    <Label text="Reports Available to Send"/>
                    <TableView fx:id="tblReports" prefHeight="350.0">
                        <columns>
                            <TableColumn fx:id="colReportId" text="Report ID" prefWidth="80.0"/>
                            <TableColumn fx:id="colTitle" text="Title" prefWidth="220.0"/>
                            <TableColumn fx:id="colCreatedDate" text="Created" prefWidth="160.0"/>
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Right: selected report + send controls -->
                <VBox spacing="8.0" padding="0 0 0 10">
                    <Label text="Selected Report Details"/>

                    <GridPane hgap="10.0" vgap="8.0">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="30"/>
                            <ColumnConstraints percentWidth="70"/>
                        </columnConstraints>

                        <children>
                            <Label text="Report ID:"
                                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <Label fx:id="lblSelectedReportId"
                                   text="-"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Title:"
                                   GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <Label fx:id="lblSelectedTitle"
                                   text="-"
                                   wrapText="true"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Created:"
                                   GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <Label fx:id="lblSelectedCreated"
                                   text="-"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                            <Label text="Status:"
                                   GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <Label fx:id="lblSelectedStatus"
                                   text="-"
                                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                            <Label text="Manager ID:"
                                   GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtManagerId"
                                       promptText="e.g. 2001"
                                       GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                        </children>
                    </GridPane>

                    <Label text="Report Summary:"/>
                    <TextArea fx:id="txtSummary"
                              editable="false"
                              wrapText="true"
                              prefRowCount="5"/>

                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Button text="Send Report" onAction="#onSendReport"/>
                        <Button text="Clear Selection" onAction="#onClearSelection"/>
                    </HBox>
                </VBox>
            </SplitPane>

            <!-- Status bar -->
            <Label fx:id="lblStatus" text="Ready"/>
        </VBox>
    </children>
</AnchorPane>
