<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.com_oop_project_group21_pastryshop.QualityControlOfficer.ReviewCustomerFeedbackController"
            prefHeight="500.0" prefWidth="900.0">

    <children>
        <VBox spacing="10.0" padding="10.0"
              AnchorPane.topAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0">

            <!-- Header -->
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Customer Feedback Review"
                       style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                <Label text="Officer ID:"/>
                <Label fx:id="lblOfficerId" text="-" />
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Reload Feedback" onAction="#onReloadFeedback"/>
            </HBox>

            <!-- Main content: table + details -->
            <SplitPane dividerPositions="0.45">
                <!-- Left side: feedback list -->
                <VBox spacing="5.0">
                    <Label text="All Feedback"/>
                    <TableView fx:id="tblFeedback" prefHeight="350.0">
                        <columns>
                            <TableColumn fx:id="colFeedbackId" text="ID" prefWidth="60.0"/>
                            <TableColumn fx:id="colRating" text="Rating" prefWidth="70.0"/>
                            <TableColumn fx:id="colCommentShort" text="Comment" prefWidth="220.0"/>
                            <TableColumn fx:id="colTimestamp" text="Timestamp" prefWidth="160.0"/>
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="80.0"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Right side: details + notes -->
                <VBox spacing="8.0" padding="0 0 0 10">
                    <Label text="Feedback Details"/>

                    <GridPane hgap="10.0" vgap="8.0">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="30"/>
                            <ColumnConstraints percentWidth="70"/>
                        </columnConstraints>

                        <children>
                            <Label text="Feedback ID:"
                                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <Label fx:id="lblSelectedFeedbackId"
                                   text="-"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Rating:"
                                   GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <Label fx:id="lblRating"
                                   text="-"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Timestamp:"
                                   GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <Label fx:id="lblTimestamp"
                                   text="-"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        </children>
                    </GridPane>

                    <Label text="Customer Comment:"/>
                    <TextArea fx:id="txtFullComment"
                              editable="false"
                              wrapText="true"
                              prefRowCount="5"/>

                    <Label text="Internal Notes:"/>
                    <TextArea fx:id="txtInternalNotes"
                              wrapText="true"
                              prefRowCount="4"/>

                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Button text="Mark as Reviewed" onAction="#onMarkReviewed"/>
                        <Button text="Clear Notes" onAction="#onClearNotes"/>
                    </HBox>
                </VBox>
            </SplitPane>

            <!-- Status bar -->
            <Label fx:id="lblStatus" text="Ready"/>
        </VBox>
    </children>
</AnchorPane>
